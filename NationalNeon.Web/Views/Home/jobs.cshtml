<!-- widget grid -->
<section id="widget-grid" class="">

    <!-- row -->
    <div class="row">

        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">            
           <button class="btn btn-danger new-jobs" data-toggle="modal" data-target="#myModal">New Job</button>  
           <div class="modal fade" id="myModal" role="dialog">
               <div class="modal-dialog">

                   <!-- Modal content-->
                   <div class="modal-content">
                       <div class="modal-header modal-popup-header">
                           <button type="button" class="close" data-dismiss="modal">&times;</button>
                           <h1 class="modal-title">New Job</h1>
                       </div>
                       <div class="modal-body">
                           <form class="smart-form">
                               <section>
                                   <label class="label">Job Number</label>
                                   <label class="input"><input type="number" class="input-sm"></label>
                               </section>

                               <section>
                                   <label class="label">Job Name</label>
                                   <label class="input"><input type="text" class="input-sm"></label>
                               </section>


                               <section>
                                   <label class="label">Description</label>
                                   <label class="textarea textarea-resizable">
                                       <textarea rows="3" class="custom-scroll"></textarea>
                                   </label>
                               </section>


                               <section>
                                   <label class="label">Target Completion Date</label>
                                   <label class="input"><input type="text" placeholder="click to choose a completion date" class="input-sm datepicker"></label>
                               </section>


                               <section>
                                   <label class="label">Status</label>
                                   <label class="input"><input type="text" class="input-sm"></label>
                               </section>


                               <section>
                                   <label class="label">Scheduled Date</label>
                                   <label class="input"><input type="text" placeholder="click to choose a schedule date" class="input-sm datepicker"></label>
                               </section>

                               <section>
                                   <label class="label">Revenue</label>
                                   <label class="input"><input type="number" step="0.01" class="input-sm"></label>
                               </section>

                               <section>
                                   <label class="label">Sales Person</label>
                                   <label class="input"><input type="text" class="input-sm"></label>
                               </section>

                               <footer class="text-center form-submit"><button type="submit" class="btn btn-danger form-submit-btn">Submit</button></footer>
                           </form>
                       </div>
                       @*<div class="modal-footer">
                           <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                       </div>*@
                   </div>

               </div>
           </div>
        </div>
        <!-- NEW WIDGET START -->
        <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">



            <!-- Widget ID (each widget will need unique ID)-->
            <div class="jarviswidget jarviswidget-color-darken" data-widget-editbutton="false" data-widget-deletebutton="false">

                <header><span class="widget-icon"> <i class="fa fa-briefcase"></i> </span><h2>Jobs</h2></header>

                <!-- widget div-->
                <div>
                    <!-- widget edit box -->
                    <div class="jarviswidget-editbox">
                        <!-- This area used as dropdown edit box -->
                    </div>
                    <!-- end widget edit box -->
                    <!-- widget content -->
                    <div class="widget-body no-padding">
                        <div class="table-responsive">

                            <table id="dt_basic" class="table table-striped table-bordered table-hover" width="100%">
                                <thead>
                                    <tr>
                                        <th>Job Number</th>
                                        <th>Job Name</th>
                                        <th>Description</th>
                                        <th>Target Completion Date</th>
                                        <th>Status</th>
                                        <th>Revenue</th>
                                        <th>Scheduled Date</th>
                                        <th>Sales Person</th>
                                        <th>Documents</th>
                                        <th>Actions</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in ViewBag.Model)
                                    {
                                        <tr>

                                            <td></td>
                                            <td></td>
                                            <td></td>
                                            <td></td>
                                            <td></td>
                                            <td></td>
                                            <td></td>
                                            <td></td>
                                            <td></td>
                                            <td class="job-action">
                                                <a href="#"><i class="fa fa-eye" aria-hidden="true"></i></a>
                                                <a href="#"><i class="fa fa-cloud-upload" aria-hidden="true"></i></a>
                                            </td>
                                        </tr>
                                    }



                                    </tbody>
                            </table>
                        </div>
                    </div>
                    <!-- end widget content -->

                </div>
                <!-- end widget div -->

            </div>
            <!-- end widget -->
        </article>
        <!-- WIDGET END -->
    </div>
    <!-- end row -->
    <!-- end row -->

</section>
<!-- end widget grid -->
