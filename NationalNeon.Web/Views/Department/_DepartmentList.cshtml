@model IList<NationalNeon.Domain.Department.DepartmentModel>
<style>
    #tt {
        color: red;
    }
    .swatch input {
        height: 30px;
        float: left;
        border: 2px #000 solid;
        border-radius: 5px;
    }
</style>
<table id="dt_basic" class="table table-striped table-bordered table-hover" width="100%">
    <thead>
        <tr>
            <th>Name</th>
            <th>Department Color</th>
            <th> Description</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.departmentname
                    <input type="hidden" value="@item.departmentId" />
                   
                </td>
                <td>
                    <div class="swatch">
                        <input type="text" style="background-color: @item.Color" />
                    </div>
                </td>
                <td>@item.description</td>
            </tr>
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $("div#divList tbody tr").on("mouseover", function () {
            $(this).css("cursor", "pointer");
        }).on("click", function (event) {
            departmentId = $(this).find("td:first input[type='hidden']").val();
            if (departmentId != "") {
                location.href = "/Detail?Id=" + departmentId;
            }
        });
    });
</script>
