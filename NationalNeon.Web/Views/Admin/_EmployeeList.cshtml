@model List<NationalNeon.Web.ViewModels.EmployeeViewModel>

<article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
    <!-- Widget ID (each widget will need unique ID)-->
    <div class="jarviswidget jarviswidget-color-darken" id="wid-id-0" data-widget-editbutton="false" data-widget-deletebutton="false">
        @*<header><span class="widget-icon"> <i class="fa fa-briefcase"></i> </span><h2>Jobs</h2></header>*@
        <!-- widget div-->
        <div>
            <!-- widget edit box -->
            <div class="jarviswidget-editbox">
                <!-- This area used as dropdown edit box -->
            </div>
            <!-- end widget edit box -->
            <!-- widget content -->
            <div class="widget-body no-padding">
                <div class="table-responsive">

                    <table id="dt_basic" class="table table-striped table-bordered table-hover" width="100%">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>FirstName</th>
                                <th>LastName</th>
                                <th>Type</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                var sno = 1;
                                foreach (var employee in Model)
                                {

                                    <tr>
                                        <td>@sno</td>
                                        <td>@employee.FirstName </td>
                                        <td>@employee.LastName</td>
                                        <td>@employee.EmployeeType</td>
                                        <td class="job-action">
                                            <a href="#" data-toggle="modal" data-target="#myModal" title="Edit" onClick="getEmployee(@employee.EmployeeId)"><i class="fa fa-edit" aria-hidden="true"></i></a>
                                            <a href="#" title="Delete" data-toggle="modal" data-target="#opener" onclick="setEmployeeID(@employee.EmployeeId)"><i class="fa fa-trash-o" aria-hidden="true"></i></a>
                                            @*<button data-toggle="modal" data-target="#taskConfirmation" class="fa fa-check-square btn_complete" title="Click to complete task" onclick="setTaskID(@employee.EmployeeId)"></button>*@

                                        </td>
                                    </tr>
                                    sno = sno + 1;
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- end widget content -->

        </div>
        <!-- end widget div -->

    </div>
    <!-- end widget -->
</article>
<!-- WIDGET END -->
<!-- end row -->
<!-- end row -->



<div class="modal fade noprint" id="opener" role="dialog">
    <div class="modal-dialog" style="width: 320px;">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header modal-popup-header">
                <button type="button" class="close" data-dismiss="modal" id="btn_closeConfirm">&times;</button>
                <h1 class="modal-title">Delete Employee</h1>
            </div>
            <div class="modal-body text-center">
                <h5>Are you sure you want to delete this Employee ?</h5>
                <button onclick="deleteEmployee()" class="btn btn-danger form-submit-btn" style="background:#3276b1; border-color:#3276b1">Yes</button>
                <button data-dismiss="modal" class="btn btn-danger form-submit-btn">No</button>
            </div>

        </div>

    </div>
</div>
