@model NationalNeon.Web.Models.LoginViewModel

<form asp-action="Login" asp-controller="Account" class="form-inline mt-2 mt-md-0">
    <div class="form-group">
        <span asp-validation-for="EmailId" class="text-danger "></span>
        <input asp-for="EmailId" placeholder="Email Address" class=" form-control mr-sm-2 my-2" />
    </div>  
    <div class="form-group">
        <span asp-validation-for="Password" class="text-danger "></span>
        <input asp-for="Password" placeholder="Password" class=" form-control mr-sm-2 my-2" />
        @*<i class="fa fa-eye eye-password" aria-hidden="true"></i>*@
    </div>
    <div class="form-group">
        <input type="submit" value="Login" class="btn btn-outline-success my-2 my-sm-0" />
        @*<a asp-area="" asp-controller="Account" asp-action="ForgotPassword" class="nav-link">Forgot Password</a>*@
    </div>

</form>




